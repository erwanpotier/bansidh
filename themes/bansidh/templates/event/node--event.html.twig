<section id="description">
  <div class="container">
    <div class="row">
      <h1>{{ node.label }}</h1>
      <div class="col-md-7 col-sm-12 description-content">   
      <div class="img-banner item">
        {{ content.field_banniere }}
      </div> 

        <h2>Description</h2>
        <p>{{content.field_description}}</p>

        {% if content.field_compte_flickr[0] is not null and content.field_album_flickr[0] is not null %}
        <div id="sharephoto"  data-role="page">
          <div id="flickr">
        <iframe
          class="rlk-autosize rlk-fullwidth"
          src="https://www.flickr.com/photos/{{content.field_compte_flickr[0]}}/sets/{{content.field_album_flickr[0]}}/player/"
          width="480"
          height="320"
          frameborder="0"
          allowfullscreen webkitallowfullscreen mozallowfullscreen oallowfullscreen msallowfullscreen>
        </iframe>
          </div>
        </div>
        {% endif %}


        {% if content.field_twitter[0] is not null %}
        <div id="twitter" data-role="page">
                 <h2>Tweets de @{{content.field_twitter[0]}}</h2>
                 <a class="twitter-timeline"
                 href="https://twitter.com/{{content.field_twitter[0]}}" data-chrome="noheader nofooter noborders transparent" border-color="#92b6d5" data-height="300">
                 Tweets by @{{content.field_twitter[0]}}
                 </a>
                 <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
        </div><!--/#twitter-->
        {% endif %}
      </div>


       <div class="col-md-4 col-sm-12">

        <div id="contact">
          <h3>Contact</h3>
          <div class="contact-address">
            <address> {{content.field_rue}}</address>
            <address> {{content.field_code_postal}} </address>
            <address> {{content.field_ville}} </address>
          </div>
          <div class="contact-address">
            <address> {{content.field_telephone}} </address>
            <address> {{content.field_email}} </address>
            <address> {{content.field_site_web}} </address>
          </div>
        </div>



        <div id="timeto">
            <div class="row  count_wrapper">     
                <h2>Début dans:</h2>
                <ul id="countdown">
                  <li>  
                    <p> <span class="days time-font"></span> J</p>
                  </li>
                  <li>
                    <p class=""><span class="hours time-font"></span> H</p>
                  </li>
                  <li>
                    <p class=""><span class="minutes time-font"></span> M</p>
                  </li>
                  <li>
                    <p class=""><span class="seconds time-font"></span> S</p>
                  </li>
                </ul>
            </div>
        <script> var event_date = '{{content.field_date_de_debut[0]|json_encode()|raw|slice(61,22)}}';</script>
            <div class="row">
              <div class="event_date">

                <p>Du {{ content.field_date_de_debut[0]|json_encode()|raw|slice(61,22)|date("d/m/Y à H:i",  "Europe/Paris") }} au {{ content.field_date_de_fin[0]|json_encode()|raw|slice(61,22)|date("d/m/Y à H:i",  "Europe/Paris") }}</p> 
              </div>
            </div> 
        </div><!--/#timeto   | localizeddate('full', 'none')         -->


            <div class="tag-list">
              <p>{{content.field_tags}}</p>
              <p>{{content.field_region}}</p>
              <p>{{content.field_categorie}}</p>
            </div>
          {% if content.field_page_facebook[0] is not null %}
                  <div class="facebook-page">

                    <div id="fb-root"></div>
                    <div class="fb-page" 
                      data-href="https://www.facebook.com/{{content.field_page_facebook[0]}}"
                      data-width="380"
                      data-hide-cover="false"
                      data-show-facepile="false"
                      data-show-posts="false">
                    </div>
                  </div>
          {% endif %}

        <div id="event-map">
           {{content.field_geolocalisation}}
        </div><!--/#event-map-->

        </div>

    </div>  
  </div>
</section><!--/#description-->
