{#
/**
 * @file
 * Theme override for a select element.
 *
 * Available variables:
 * - attributes: HTML attributes for the <select> tag.
 * - options: The <option> element children. For select cat√©gorie: 3 levels options
 *
 * @see template_preprocess_select()
 */
#}

{% spaceless %}
  <select {{ attributes.addClass("form-control")}} >
    {% for option in options %}
      {% if option.type == 'optgroup' %}
        <optgroup label="{{ option.label }}" >
          {% for sub_option in option.options %}
                  {% if sub_option.type == 'optgroup' %}
                    <optgroup label="{{ sub_option.label }}" >
                        {% for thierdlevel_option in sub_option.options %}
                          <option value="{{ thierdlevel_option.value }}"{{ thierdlevel_option.selected ? ' selected="selected"' }}>{{ thierdlevel_option.label }}</option>
                        {% endfor %}
                    </optgroup>
                  {% elseif sub_option.type == 'option' %}
                    <option value="{{ sub_option.value }}"{{ sub_option.selected ? ' selected="selected"' }}>{{ sub_option.label }}</option>
                  {% endif %}
          {% endfor %}
        </optgroup>
      {% elseif option.type == 'option' %}
        <option value="{{ option.value }}"{{ option.selected ? ' selected="selected"' }}>{{ option.label }}</option>
      {% endif %}
    {% endfor %}
  </select>
{% endspaceless %}